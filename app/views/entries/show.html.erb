<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <%= link_to "← Back to #{@journal.title}", @journal, class: "text-purple-600 hover:text-purple-700 dark:text-purple-400 dark:hover:text-purple-300 font-medium transition-colors duration-200 mb-4 inline-block" %>

      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-semibold text-gray-900 dark:text-gray-100"><%= @journal.title %></h1>
          <p class="text-base text-gray-600 dark:text-gray-400 mt-1">
            <%= @entry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
        <div class="flex space-x-4">
          <%= link_to "Edit Entry", edit_journal_entry_path(@journal, @entry), class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
          <%= link_to "Delete", [@journal, @entry], data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
        </div>
      </div>
    </div>

    <div class="max-w-prose m-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
      <div class="prose dark:prose-invert text-gray-900 dark:text-gray-300">
        <%= @entry.content %>
      </div>
    </div>
  </div>
</div>
