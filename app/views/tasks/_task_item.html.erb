<div class="border border-gray-200 rounded-lg p-4 bg-white" data-controller="task-toggle">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <!-- Expand/Collapse Button for tasks with children -->
      <% if task.children.any? %>
        <button data-task-toggle-target="button"
                data-action="click->task-toggle#toggle"
                class="text-gray-500 hover:text-gray-700 font-mono text-sm">
          â–¶
        </button>
      <% else %>
        <span class="w-4"></span>
      <% end %>
      
      <!-- Task Name -->
      <div class="flex-1">
        <%= link_to task.name, task_path(task), class: "text-lg font-medium text-blue-600 hover:text-blue-800" %>
        
        <!-- Task Badges -->
        <div class="flex space-x-2 mt-1">
          <% if task.urgent %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Urgent
            </span>
          <% end %>
          
          <% if task.important %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              Important
            </span>
          <% end %>
          
          <% if task.due_date %>
            <% due_class = task.due_date < Date.current ? "bg-red-100 text-red-800" : 
                          task.due_date == Date.current ? "bg-orange-100 text-orange-800" : 
                          "bg-gray-100 text-gray-800" %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= due_class %>">
              Due: <%= task.due_date.strftime("%m/%d/%Y") %>
            </span>
          <% end %>
          
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= task.task_list.name %>
          </span>
        </div>
        
        <!-- Task Description -->
        <% if task.description.present? %>
          <p class="text-gray-600 text-sm mt-2"><%= truncate(task.description, length: 100) %></p>
        <% end %>
      </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_task_path(task), class: "text-blue-600 hover:text-blue-800 text-sm" %>
      <%= link_to "Delete", task_path(task), method: :delete, 
          confirm: "Are you sure?", 
          class: "text-red-600 hover:text-red-800 text-sm" %>
    </div>
  </div>
  
  <!-- Children Tasks (initially hidden) -->
  <% if task.children.any? %>
    <div data-task-toggle-target="children" style="display: none;" class="ml-8 mt-4 space-y-2">
      <% task.children.each do |child_task| %>
        <%= render 'task_item', task: child_task %>
      <% end %>
    </div>
  <% end %>
</div>
