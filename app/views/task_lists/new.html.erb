<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <%= link_to "â† Task Lists", task_lists_path, class: "text-purple-600 hover:text-purple-700 dark:text-purple-400 dark:hover:text-purple-300 font-medium transition-colors duration-200 mb-4 inline-block" %>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Create New Task List</h1>
      <p class="text-base text-gray-600 dark:text-gray-400 mt-2">Create a new list to organize your tasks</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 border border-gray-200 dark:border-gray-700">
      <%= form_with model: @task_list, local: true, class: "space-y-6" do |form| %>
        <% if @task_list.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-4">
            <h3 class="text-lg font-medium text-red-800 dark:text-red-200 mb-2">
              <%= pluralize(@task_list.errors.count, "error") %> prohibited this task list from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-700 dark:text-red-300">
              <% @task_list.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Task List Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_field :name, 
              class: "w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
              placeholder: "Enter task list name..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200 dark:border-gray-700">
          <%= link_to "Cancel", task_lists_path, 
              class: "bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-900 dark:text-gray-100 font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
          
          <%= form.submit "Create Task List", 
              class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
