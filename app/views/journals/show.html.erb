<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100"><%= @journal.title %></h1>
        <p class="text-base text-gray-600 dark:text-gray-400 mt-2">
          <%= pluralize(@entries.count, 'entry') %> • Created <%= time_ago_in_words(@journal.created_at) %> ago
        </p>
      </div>
      <div class="flex space-x-4">
        <%= link_to "New Entry", new_journal_entry_path(@journal), class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
        <%= link_to "Edit Journal", edit_journal_path(@journal), class: "bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-900 dark:text-gray-100 font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
      </div>
    </div>

    <div class="flex justify-between items-center mb-6">
      <%= link_to "← Back to Journals", journals_path, class: "text-purple-600 hover:text-purple-700 dark:text-purple-400 dark:hover:text-purple-300 font-medium py-2 px-4 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-950 transition-colors duration-200" %>
    </div>

    <% if @entries.any? %>
      <div class="space-y-6">
        <% @entries.each do |entry| %>
          <%= link_to [@journal, entry], class: "block" do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex justify-between items-start mb-4">
                <p class="text-sm text-gray-500 dark:text-gray-500">
                  <%= entry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <div class="prose dark:prose-invert max-w-none">
                <%= truncate(strip_tags(entry.content.to_s), length: 200) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 border border-gray-100 dark:border-gray-700 max-w-md mx-auto">
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">No entries yet</h3>
          <p class="text-base text-gray-600 dark:text-gray-400 mb-6">Start writing your thoughts and experiences.</p>
          <%= link_to "Write Your First Entry", new_journal_entry_path(@journal), class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
