<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">My Journals</h1>
      <%= link_to "New Journal", new_journal_path, class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
    </div>

    <% if @journals.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @journals.each do |journal| %>
          <%= link_to journal, class: "block" do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl hover:scale-[1.02] transition-all duration-300 p-6 border border-gray-200 dark:border-gray-700 cursor-pointer">
              <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2"><%= journal.title %></h3>
              <p class="text-sm text-gray-500 dark:text-gray-500 mb-4">
                <%= pluralize(journal.entries.count, 'entry') %>
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-500">
                Created <%= time_ago_in_words(journal.created_at) %> ago
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 border border-gray-100 dark:border-gray-700 max-w-md mx-auto">
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">No journals yet</h3>
          <p class="text-base text-gray-600 dark:text-gray-400 mb-6">Start your journaling journey by creating your first journal.</p>
          <%= link_to "Create Your First Journal", new_journal_path, class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
