<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="max-w-prose mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= link_to "â† Back to Journals", journals_path, class: "text-purple-600 hover:text-purple-700 dark:text-purple-400 dark:hover:text-purple-300 font-medium transition-colors duration-200 mb-4 inline-block" %>
    
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Create New Journal</h1>
      <p class="text-base text-gray-600 dark:text-gray-400 mt-2">Start a new journaling journey</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 border border-gray-100 dark:border-gray-700">
      <%= form_with model: @journal, local: true, class: "space-y-6" do |form| %>
        <% if @journal.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-4">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200 mb-2">
              <%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:
            </h3>
            <ul class="text-sm text-red-700 dark:text-red-300 list-disc list-inside">
              <% @journal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_field :title, class: "w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200", placeholder: "Enter journal title..." %>
        </div>

        <div class="flex justify-end space-x-4">
          <%= link_to "Cancel", journals_path, class: "bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-900 dark:text-gray-100 font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
          <%= form.submit "Create Journal", class: "bg-purple-600 hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
